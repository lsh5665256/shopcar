<!--pages/index/index.wxml-->
<view class="main">
 <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">目标</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">习惯</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">手记</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <swiper-item>
        <view>
            <view class='select_box'>
            <view class='select' catchtap='selectTap'>
              <text class='select_text'>{{selectData[index]}}</text>
              <image class='select_img {{show&&"select_img_rotate"}}' src='/image/gobottom.png'></image>   
            </view>
            <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
              <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
            </view>
            </view>
        </view>
    </swiper-item>
    <swiper-item>
        <view>
          <h2>我的习惯</h2>
        </view>
    </swiper-item>
    <swiper-item>
        <view>理财</view>
    </swiper-item>
</swiper>

</view>