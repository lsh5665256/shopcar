/* pages/menu/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header view{
  height: 100%;
  width: 100%;
  text-align: center;
  line-height: 40px;
}
.header view text{
  display: inline-block;
  height: 100%;
}
.active{
  border-bottom: 2px solid black;
}
.content{
  width: 100%;
  flex: 1;
  margin-top: 10px;
  padding-right: 10px;
  /* padding: 10px 10px 10px ; */
}
